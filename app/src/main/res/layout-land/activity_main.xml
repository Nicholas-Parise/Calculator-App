<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:text="0"
        android:id="@+id/output"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        style="@style/value_style"
        />



    <Button
        android:id="@+id/clearAll"
        style="@style/button_style"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="CE" />


    <Button
        android:id="@+id/clear"
        style="@style/button_style"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="C" />

    <ToggleButton
        android:id="@+id/toggle"
        style="@style/switch_style"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:textOff="BAS"
        android:textOn="ADV" />


    <Button
        android:id="@+id/num_7"
        style="@style/button_style"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="7" />

    <Button
        android:id="@+id/num_8"
        style="@style/button_style"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:text="8" />

    <Button
        android:id="@+id/num_9"
        style="@style/button_style"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:text="9" />

    <Button
        android:id="@+id/mult"
        style="@style/button_style"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:text="×" />


    <Button
        android:id="@+id/num_4"
        style="@style/button_style"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="4" />

    <Button
        android:id="@+id/num_5"
        style="@style/button_style"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:text="5" />

    <Button
        android:id="@+id/num_6"
        style="@style/button_style"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:text="6" />



    <Button
        android:id="@+id/num_1"
        style="@style/button_style"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="1" />

    <Button
        android:id="@+id/num_2"
        style="@style/button_style"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:text="2" />

    <Button
        android:id="@+id/num_3"
        style="@style/button_style"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:text="3" />



    <Button
        android:id="@+id/dec"
        style="@style/button_style"
        android:layout_row="6"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="." />

    <Button
        android:id="@+id/num_0"
        style="@style/button_style"
        android:layout_row="6"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:text="0" />




    <Button
        android:id="@+id/minus"
        style="@style/button_style"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:text="−" />


    <Button
        android:id="@+id/plus"
        style="@style/button_style"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:text="+" />


    <Button
        android:id="@+id/div"
        style="@style/button_style"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:text="÷" />

    <Button
        android:id="@+id/openBracket"
        style="@style/button_style"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:text="(" />

    <Button
        android:id="@+id/closeBracket"
        style="@style/button_style"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:text=")" />


    <Button
        android:id="@+id/equal"
        style="@style/button_style"
        android:layout_row="6"
        android:layout_rowWeight="1"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:text="="
        android:layout_columnSpan="2"
        />


</GridLayout>